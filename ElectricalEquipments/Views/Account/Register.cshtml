@model UserRegisterViewModel
@{
    ViewData["Title"] = "Login";
}
@if (!String.IsNullOrEmpty(ViewBag.registerFailMessage))
{
    <div class="alert alert-danger">
        @ViewBag.registerFailMessage
    </div>
}

<form method="post">
    <div class="form-group">
        <label>Ad</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Ad">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label>Soyad</label>
        <input asp-for="Surname" type="text" class="form-control" placeholder="Soyad">
        <span class="text-danger" asp-validation-for="Surname"></span>
    </div>
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <input asp-for="Username" type="text" class="form-control" placeholder="Kullanıcı Adı">
        <span class="text-danger" asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label>Mail</label>
        <input asp-for="Mail" type="email" class="form-control" placeholder="Mail">
        <span class="text-danger" asp-validation-for="Mail"></span>
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Şifre">
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>