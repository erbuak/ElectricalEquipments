@model User  
@{
    ViewData["Title"] = "Login";
}

<form method="post">
    <div class="form-group">
        <label>Ad</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Ad">
    </div>
    <div class="form-group">
        <label>Soyad</label>
        <input asp-for="Surname" type="text" class="form-control" placeholder="Soyad">
    </div>
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <input asp-for="Username" type="text" class="form-control" placeholder="Kullanıcı Adı">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Mail" type="email" class="form-control" placeholder="Email">
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Şifre">
    </div>
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>