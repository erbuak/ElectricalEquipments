@{
    ViewData["Title"] = "Login";
}

@if (!string.IsNullOrEmpty(ViewBag.registerSuccessMessage))
{
    <div class="alert alert-success">
        @ViewBag.registerSuccessMessage
    </div>
}

<form class="mb-3">
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <input type="text" class="form-control" placeholder="Kullanıcı Adı">
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input type="password" class="form-control" placeholder="Şifre">
    </div>
    <button type="submit" class="btn btn-primary">Giriş Yap</button>
</form>

<a asp-controller="Account" asp-action="Register">Hesabın yok mu? Kayıt Ol!</a>