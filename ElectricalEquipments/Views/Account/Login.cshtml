@model UserLoginViewModel
@{
    ViewData["Title"] = "Login";
}
@if (!string.IsNullOrEmpty(ViewBag.registerSuccessMessage))
{
    <div class="alert alert-success">
        @ViewBag.loginSuccessMessage
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.loginFailMessage))
{
    <div class="alert alert-danger">
        @ViewBag.loginFailMessage
    </div>
}

<form class="mb-3" method="post">
    <div class="form-group">
        <label>Mail</label>
        <input asp-for="Mail" type="email" class="form-control" placeholder="Mail">
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Şifre">
    </div>
    <button type="submit" class="btn btn-primary">Giriş Yap</button>
</form>

<a asp-controller="Account" asp-action="Register">Hesabın yok mu? Kayıt Ol!</a>