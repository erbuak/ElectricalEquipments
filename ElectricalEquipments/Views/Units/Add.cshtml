@model Unit
@{ 
    ViewData["Title"] = "Ünite Ekle";
}

<h1>Ünite Ekle</h1>
<hr />
<form method="post">
    <div class="form-group">
        <label asp-for="CodeName">Kod Adı</label>
        <input asp-for="CodeName" class="form-control" />
        <span asp-validation-for="CodeName" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="form-text text-danger"></span>
    </div>
    <button class="btn btn-primary">Ekle</button>
</form>